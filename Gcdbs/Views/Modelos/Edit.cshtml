@model Gcdbs.Models.Modelo

@{
    ViewData["Title"] = "Editar Modelo";
}

<h2>Editar Modelo</h2>

<h4>Modelo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdModelo" />
            <div class="form-group">
                <label asp-for="NomeModelo" class="control-label"></label>
                <input asp-for="NomeModelo" class="form-control" />
                <span asp-validation-for="NomeModelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
